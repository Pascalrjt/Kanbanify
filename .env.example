# Database Configuration for Vercel Postgres
# Copy these values from your Vercel Postgres dashboard

# Main database URL with connection pooling (use this for app queries)
POSTGRES_PRISMA_URL="postgres://username:password@host:port/database?pgbouncer=true&connect_timeout=15"

# Direct database URL without pooling (use this for migrations)
POSTGRES_URL_NON_POOLING="postgres://username:password@host:port/database"

# Legacy DATABASE_URL (same as POSTGRES_PRISMA_URL)
DATABASE_URL="postgres://username:password@host:port/database?pgbouncer=true&connect_timeout=15"

# Admin authentication
ADMIN_PASSWORD=adminpassword123
